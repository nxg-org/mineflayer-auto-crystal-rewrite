{
    "compilerOptions": {
        "incremental": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "target": "ES2015",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "lib/",        
        "lib": ["es6", "dom", "es2015"]

    },
    "include": ["src/**/*"],
    "exclude": []
}