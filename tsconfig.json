{
    "compilerOptions": {
        "incremental": true,
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "target": "ES6",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "lib/",        
        "lib": ["es6", "dom", "es2017"]

    },
    "include": ["src/**/*"],
    "exclude": []
}